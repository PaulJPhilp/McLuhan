{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "./dist",
    "sourceMap": true,
    "inlineSources": true,
    "noEmit": false,
    "types": ["node"],
    "lib": ["ES2022"],
    "strictNullChecks": true
  },
  "include": ["src"],
  "exclude": [
    "test",
    "**/*.test.ts",
    "**/__tests__/**",
    "*.config.*",
    "vitest.config.ts"
  ]
}
