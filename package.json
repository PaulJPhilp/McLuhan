{
  "name": "mcluhan",
  "version": "0.0.0",
  "private": true,
  "description": "McLuhan monorepo: Effect-native packages for AI agent infrastructure",
  "type": "module",
  "packageManager": "bun@1.1.33",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --filter '*' build",
    "typecheck": "bun run --filter '*' typecheck",
    "test": "bun run --filter '*' test",
    "test:watch": "bun run --filter '*' test:watch",
    "lint": "bun run --filter '*' lint",
    "format": "bun run --filter '*' format",
    "format:fix": "bun run --filter '*' format:fix"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "typescript": "^5.9.3"
  }
}
